package musicPlayer;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.IOException;

import javax.sound.sampled.AudioInputStream;
import javax.sound.sampled.AudioSystem;
import javax.sound.sampled.Clip;
import javax.sound.sampled.LineUnavailableException;
import javax.sound.sampled.UnsupportedAudioFileException;
import java.util.Scanner;
public class Main {
	public static void main(String[] args) {
		
		String[]playlist = {
				"src/musicPlayer/F16 - The Grey Room _ Golden Palms.wav",
				"src/musicPlayer/make the visible invisible - Alge.wav"				
		};
		
		int currentSongIndex = 0;
		Clip clip = null;
		AudioInputStream audioStream = null;
		File file = new File(playlist[currentSongIndex]);
		
		try(Scanner scanner = new Scanner(System.in)){
            audioStream = AudioSystem.getAudioInputStream(file);
			clip = AudioSystem.getClip();
			clip.open(audioStream);
			
			String response = "";
			while(!response.equals("QUIT")) {
				System.out.println("Play");
				System.out.println("Stop");
				System.out.println("Reset");
				System.out.println("Next");
				System.out.println("Previous");
				System.out.println("Quit");
				System.out.print("Enter your choice: ");
				response = scanner.nextLine().toUpperCase();

                switch (response) {
                    case "PLAY" -> clip.start();
                    case "STOP" -> clip.stop();
                    case "RESET" -> clip.setMicrosecondPosition(0);
                    case "NEXT" -> {
                        currentSongIndex = (currentSongIndex + 1) % playlist.length;
                        file = new File(playlist[currentSongIndex]);
                        audioStream = AudioSystem.getAudioInputStream(file);
                        clip.close();
                        clip.open(audioStream);
                        System.out.println("Now playing: " + playlist[currentSongIndex]);
                    }
                    case "PREVIOUS" -> {
                        currentSongIndex = (currentSongIndex - 1 + playlist.length) % playlist.length;
                        file = new File(playlist[currentSongIndex]);
                        audioStream = AudioSystem.getAudioInputStream(file);
                        clip.close();
                        clip.open(audioStream);
                        System.out.println("Now playing: " + playlist[currentSongIndex]);
                    }
                    case "QUIT" -> clip.close();
                    default -> System.out.println("Please enter a valid choice");
                }
            }
        } catch (FileNotFoundException e) {
            System.out.println("Could not find file");
        } catch (LineUnavailableException e) {
            System.out.println("Cannot access audio source");
        } catch (UnsupportedAudioFileException e) {
            System.out.println("Audio file not supported");
        } catch (IOException e) {
            System.out.println("Error");
        }
    }
}
